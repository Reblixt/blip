generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  // id            String  @id @default(cuid()) // ta bort id
  walletAddress String @id
  email         String? @unique
  name          String?
  password      String?

  asRecipient UserGuardians[] @relation("RecipientGuardians")
  asGuardian  UserGuardians[] @relation("GuardianRelations")

  sentPayments     Payments[] @relation("SentPayments")
  receivedPayments Payments[] @relation("ReceivedPayments")

  paymentApprovals PaymentApprovals[] @relation("ApprovedPayments")
}

model UserGuardians {
  id          String   @id @default(cuid())
  recipientWallet String
  guardianWallet  String
  status      String
  createdAt   DateTime @default(now())

  recipient Users @relation("RecipientGuardians", fields: [recipientWallet], references: [walletAddress])
  guardian  Users @relation("GuardianRelations", fields: [guardianWallet], references: [walletAddress])

  @@unique([recipientWallet, guardianWallet])
}

model Payments {
  id               String   @id @default(cuid())
  senderWallet     String
  recipientWallet  String
  amount           String
  tokenAddress     String?
  message          String?
  status           String
  blockchainTxHash String?
  createdAt        DateTime @default(now())
  hasViewed        Boolean @default(false)

  sender    Users              @relation("SentPayments", fields: [senderWallet], references: [walletAddress])
  recipient Users              @relation("ReceivedPayments", fields: [recipientWallet], references: [walletAddress])
  approvals PaymentApprovals[]
}

model PaymentApprovals {
  id         String   @id @default(cuid())
  paymentId  String
  guardianWallet String
  approved   Boolean
  createdAt  DateTime @default(now())

  payment  Payments @relation(fields: [paymentId], references: [id])
  guardian Users    @relation("ApprovedPayments", fields: [guardianWallet], references: [walletAddress])

  @@unique([paymentId, guardianWallet])
  // @@index([createdAt])
}
